<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
      
      <div class="actions">
      	<%= f.submit "Sign in", class: "btn btn-info btn-small" %>
      </div>
    <% end %>

    <p>New user? <%= link_to "Sign up!", signup_path %></p>
  </div>
</div>